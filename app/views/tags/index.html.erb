<div class="masonry-container transitions-enabled centered has-gutters infinite-scroll clearfix">
  <% @tags.each do |tag| %>
    <%= link_to "/tags/#{tag.name}" do %>
      <div class="chapter box normal">
        <div class="crow">
          <h3><%= link_to tag.to_s, "/tags/#{tag.name}" %></h3>
        </div>
        <div class="row">
          <div class="crow small-6 columns">
            <h6>chapters:</h6> 
            <p class="crow counter"><%= tag.chapters.length %></p>
          </div>
          <div class="crow small-6 columns">
            <h6>followers:</h6> 
            <p class="counter"><%= tag.users.length %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
