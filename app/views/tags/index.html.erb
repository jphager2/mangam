<section>
  <table>
    <thead>
      <th>Tag</th>
      <th>Chapters</th>
      <th>Followers</th>
    </thead>
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td>
            <%= link_to tag.to_s, "/tags/#{tag.name}" %>
          </td>
          <td><%= tag.chapters.length %></td>
          <td><%= tag.users.length %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
