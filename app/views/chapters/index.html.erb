    <table>
      <thead></thead>
      <tbody>
        <% @chapters.each do |chap| %>
          <tr>
            <td colspan="2">
              <%= link_to action: :read, id: chap.id do %> 
                <h3><%= "#{chap.manga} #{chap.number}" %></h3>
              <% end %> 
            </td>
          </tr>
          <tr>
            <!-- replace like and tag actions later with 
                 web socket actions
             -->
            <td>
              <%= link_to "like", controller: :likes, action: :create %>
            </td>
            <td>
              <%= link_to "tag", controller: :tags, action: :add %> 
          </td>
          </tr>
        <% end %>
      <tbody>
    </table>
</section>
