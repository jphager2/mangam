<section>
  <div class="row">
    <div class="medium-7 large-9 columns">
    <%= render 'layouts/chapter', chap: @chapter, type: 'full' %> 
    </div>
    <div class="medium-5 large-3 columns">
      <div class="chapter box narrow">
        <div class="crow">
          <h2>BakaUpdates Profile</h2>
        </div>
        <div class="crow">
          <h4><%= @dashboard.title %></h4>
        </div>
        <div class="crow">
          <h5>Genres</h5>
          <p>
          <%= @dashboard.genres.map {|genre| %>
            <% link_to genre, "/tags/#{Tag.tagify(genre)}" %> 
          <% }.join(', ').html_safe %>
          </p>
        </div>
        <div class="crow">
          <h5>Description</h5>
          <p>
          <%= link_to BU.absolute_url(@dashboard.url) do %>
            <%= truncate(@dashboard.description, length: 240, omission: '...') %>
          <% end %>
          </p>
        </div>
        <div class="crow">
          <h5>Scanlators</h5>
          <p>
          <%= @dashboard.scanlators.map {|scanlator| %>
            <% link_to scanlator[:name], scanlator[:url] %> 
          <% }.join(', ').html_safe %>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="floating-button-container">
  <%= like_to(@chapter) do %>
    <div class="floating-button like-button"><span>like<span></div>
  <% end %>
</div>

<div class="floating-button-container">
  <%= link_to new_tag_path(chapter_id: @chapter.id) do %>
    <div class="floating-button tag-button"><span>#tag<span></div>
  <% end %>
</div>

