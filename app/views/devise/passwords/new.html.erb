<h2><%= t('devise.questions.password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <div class="row">
      <div class="large-6 columns">
        <div class="row collapse">
          <div class="small-3 columns">
            <span class="prefix radius">
              <%= t(:email).capitalize %>
            </span>
          </div>
          <div class="small-9 columns">
            <%= f.email_field :email, label: false, placeholder: t('placeholders.email'), autofocus: true %>
          </div>
          <% if flash[:error] =~ /email/ %>
            <small class="error medium input-text error">
              <%= t('errors.blank') %>
            </small>
          <% end %>
        </div>
      </div>
    </div>
  <div><%= f.submit t('devise.phrases.password_instructions') %></div>
<% end %>

<%= render "devise/shared/links" %>


