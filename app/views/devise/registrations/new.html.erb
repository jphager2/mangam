<header><h2><%= t(:signup).capitalize %></h2></header>

<section>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>
    <div class="row">
      <div class="large-6 columns">
        <div class="row collapse">
          <div class="small-3 columns">
            <span class="prefix radius">
              <%= t(:email).capitalize %>
            </span>
          </div>
          <div class="small-9 columns">
            <%= f.email_field :email, label: false, placeholder: t('placeholders.email'), autofocus: true %>
          </div>
          <% if flash[:error] =~ /email/ %>
            <small class="error medium input-text error">
              <%= t('errors.blank') %>
            </small>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="large-6 columns">
        <div class="row collapse">
          <div class="small-3 columns">
            <span class="prefix radius">
              <%= t(:password).capitalize %>
            </span>
          </div>
          <div class="small-9 columns">
            <%= f.password_field :password, label: false, placeholder: "********", autofocus: true, autocomplete: "off" %>
          </div>
          <% if flash[:error] =~ /password/ %>
            <small class="error medium input-text error">
              <%= t('errors.blank') %>
            </small>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="large-6 columns">
        <div class="row collapse">
          <div class="small-3 columns">
            <span class="prefix radius">
              <%= t(:password_confirmation) %>
            </span>
          </div>
          <div class="small-7 columns">
            <%= f.password_field :password_confirmation, label: false, placeholder: "********", autofocus: true, autocomplete: "off" %>
          </div>
          <div class="small-2 columns">
            <%= f.submit "Signup", class: "button postfix" %>
          </div>
          <% if flash[:error] =~ /password/ %>
            <small class="error medium input-text error">
              <%= t('errors.blank') %>
            </small>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="small-6 columns">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
